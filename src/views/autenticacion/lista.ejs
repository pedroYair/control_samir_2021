<%- include("../base/cabecera", {tituloWeb: 'Usuarios', tabla: 1}) %>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <% if (user.ROL == 'Administrador') { %>
                        <a href="/auth/register" class="btn btn-success btn-sm">Agregar</a>
                    <% } %>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tabla_registros" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Email</th>
                                <th>Rol</th>
                                <th>Estado</th>
                                <% if (user.ROL == 'Administrador') { %>
                                    <th>Acciones</th>
                                <% } %>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <% if (usuarios) { %>
                                <% usuarios.forEach(usuario => { %>
                                    <tr>
                                        <td>
                                            <%= usuario.NOMBRE %>
                                        </td>
                                        <td>
                                            <%= usuario.APELLIDO %>
                                        </td>
                                        <td>
                                            <%= usuario.EMAIL %>
                                        </td>
                                        <td>
                                            <%= usuario.ROL %>
                                        </td>
                                        <td>
                                            <% if (usuario.ESTADO == 1) { %>
                                                <a class="btn btn-sm btn-success" title="Activo"><i class="fa fa-check"></i></a>
                                                <% } else { %>
                                                    <a class="btn btn-sm btn-danger" title="Deshabilitado"><i class="fa fa-times"></i></a>
                                                    <% } %>
                                        </td>
                                        <% if (user.ROL == 'Administrador') { %>
                                            <td>
                                                <a class="btn btn-warning" title="Editar" href="/auth/edit/<%= usuario.id %> ">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                            </td>
                                        <% } %>
                                        
                                    </tr>
                                    <% }) %>
                                        <% } %>
                                            </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->



    <%- include("../base/footer", {tituloWeb: 'tabla'}) %>