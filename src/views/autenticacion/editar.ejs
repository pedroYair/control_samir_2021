<%- include("../base/cabecera.ejs", {tituloWeb: 'Editar Usuario', tabla: 0}) %>
    <div class="register-box" style="margin-top: auto;">
        <div class="register-box-body col-md-12">
            <p class="login-box-msg">Editar usuario</p>

            <form action="/auth/edit/<%= usuario.id %> " method="post" autocomplete="off">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" required placeholder="Nombres" name="nombre" value="<%= usuario.NOMBRE %>" autofocus>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" required placeholder="Apellidos" name="apellido" value="<%= usuario.APELLIDO %>">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Identificacion" name="identificacion" required value="<%= usuario.IDENTIFICACION %> ">
                    <span class="glyphicon glyphicon-check form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" required placeholder="Teléfono" name="telefono" value="<%= usuario.TELEFONO %>">
                    <span class="glyphicon glyphicon-phone form-control-feedback"></span>
                </div>
                <div class="form-group">
                    <select class="form-control" name="rol">
                        <% roles.forEach(element => { %>
                            <% if (element == usuario.ROL) { %>
                                <option selected value="<%= element %>"><%= element %></option>

                                <% } else { %>
                                    <option value="<%= element %>"><%= element %></option>
                            <% } %>
                         
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control" name="estado">
                        <% if (usuario.ESTADO == 1) { %>
                            <option selected value="1">Activo</option>
                            <option value="0">Deshabilitado</option>

                            <% } else { %>
                                <option value="1">Activo</option>
                                <option selected value="0">Deshabilitado</option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" required name="email" placeholder="Email" value="<%= usuario.EMAIL %>">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-10">
                        <a href="/auth" class="btn btn-primary btn-flat"><i class="fa fa-arrow-left"></i> Atrás</a>
                        <button type="submit" class="btn btn-success btn-flat">Guardar</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.form-box -->
    </div>

    <%- include("../base/footer", {tituloWeb: 'Editar Usuario'}) %>