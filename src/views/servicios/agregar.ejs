<%- include("../base/cabecera.ejs", {tituloWeb: 'Registrar servicio', tabla: 0}) %>
    <div class="col-md-12">
        <div class="box box-primary">
            <!-- form start -->
            <form action="/servicios/add" autocomplete="off" method="POST">
                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="nombre">Nombre</label>
                            <input type="text" maxlength="30" id="nombre" name="nombre" class="form-control" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="valor">Precio unitario</label>
                            <input type="number" id="precio" name="precio" class="form-control" placeholder="Opcional">
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="nombre">Nota</label>
                            <textarea name="nota" id="nota" rows="2" class="form-control" placeholder="Opcional"></textarea>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <a href="/servicios" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Atr√°s</a>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>

    <%- include("../base/footer", {tituloWeb: 'Registrar servicio'} ) %>